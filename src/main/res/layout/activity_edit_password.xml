<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netviom.callonline.activity.EditPasswordActivity"
    android:orientation="vertical"
    >
<com.netviom.callonline.definedwidget.TopLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/top"
    ></com.netviom.callonline.definedwidget.TopLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin12"
        >
       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/edit_height"
        android:background="@drawable/input1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left4"
            android:text="用 户  名："
            android:id="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/tex_username"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/edit_height"
        android:background="@drawable/input2"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧 密  码："
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left4"

            android:id="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edi_old_password"
            android:hint="请输入旧密码"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/edit_height"
        android:background="@drawable/input2"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新 密  码："
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left4"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edi_new_password"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请输入新密码"

            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/edit_height"
        android:background="@drawable/input3"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left4"
            android:id="@+id/textView5" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edi_re_new_password"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:background="@null"

            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic_margin_top"
        android:text="提    交"
        android:id="@+id/btn_subbmit"
        style="@style/btnStyle"
        android:layout_gravity="center_horizontal" />

        </LinearLayout>


</LinearLayout>
