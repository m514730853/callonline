<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.netviom.callonline.activity.PboxCallLogInfoActivity">

    <com.netviom.callonline.definedwidget.TopLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        </com.netviom.callonline.definedwidget.TopLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin12"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/basic_margin_top"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话号码："
                android:id="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="564564646"
                android:id="@+id/tex_user_number"
                android:layout_toRightOf="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王二"
                android:id="@+id/tex_username"
                android:layout_alignTop="@+id/textView12"
                android:layout_toRightOf="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名称："
                android:id="@+id/textView11"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="@dimen/basic_margin_top"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名称："
                android:id="@+id/textView12"
                android:layout_marginTop="@dimen/basic_margin_top"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话盒"
                android:id="@+id/tex_device_name"
                android:layout_alignBottom="@+id/textView11"
                android:layout_toRightOf="@+id/textView11" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_margin_top"
            android:text="通话记录"
            android:id="@+id/textView8" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_pbox_call_log_info"
            android:background="@drawable/shape_list_bg"
            />
    </LinearLayout>
</LinearLayout>
