<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netviom.callonline.fragment.SendSmsFragment"
    android:orientation="vertical"
    >
    <com.netviom.callonline.definedwidget.TopLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       </com.netviom.callonline.definedwidget.TopLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin4"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:text="接收号码：" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/editText"
            android:layout_marginTop="@dimen/margin_top4"
            android:hint="请选择联系人..."
            android:gravity="top"
            android:layout_gravity="left|top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短信字数："
                android:id="@+id/word_amount_tips" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="66/390"
                android:textColor="@color/red"
                android:id="@+id/tex_word_account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条数："
                android:layout_marginLeft="@dimen/margin_left4"
                android:id="@+id/sms_amount_tips" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/red"
                android:layout_weight="1"
                android:id="@+id/tex_sms_account" />

            <Button
                android:layout_width="@dimen/btn_width72"
                android:layout_height="wrap_content"
                android:text="常用短信"
                style="@style/btnStyle"
                android:id="@+id/btn_common_sms" />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_top4"
            android:hint="请输入短信内容..."
            android:gravity="top"

            android:id="@+id/edi_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_right4"
            android:gravity="right"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名："
                android:id="@+id/textView6"
                android:layout_gravity="center_vertical" />
            <Button
                android:layout_width="@dimen/btn_width72"
                android:layout_height="wrap_content"
                android:text="选择签名"
                style="@style/btnStyle"
                android:id="@+id/btn_sms_signa" />
        </LinearLayout>



            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定时发送(2014-02-02 03:24:56)"
                android:button="@drawable/qq_btn_check"
                android:layout_marginTop="@dimen/margin_top4"
                android:layout_gravity="right"
                android:id="@+id/che_timing_send" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom12"
            android:text="发    送"
            style="@style/btnStyle"
            android:layout_marginTop="@dimen/margin_top4"
            android:id="@+id/button8" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
